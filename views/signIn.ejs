<form method="post" action="/signInSubmit">
    <section id="loginFormArea">
        <div id="loginText">로그인</div>
        <div>
            <input id="idInput" type="text" name="id" placeholder="아이디" required autofocus>
        </div>
        <div>
            <input id="pwInput" type="password" name="password" placeholder="비밀번호" required>
        </div>
        <button id="loginBtn">로그인</button>
        <div class="headerElement" id="_to_signUp">회원가입</div>
    </section>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        let _signUpBtn = document.getElementById("_to_signUp");
        _signUpBtn.addEventListener("click", function () {
            window.location.href = '/signUp';
        });
    })
</script>